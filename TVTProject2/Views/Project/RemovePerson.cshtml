@model TVTProject2.Models.ViewModels.RemovePersonVM

@{
    ViewData["Title"] = "RemovePerson";
}

<h1>RemovePerson</h1>


<div>
    <h4>RemovePersonVM</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ProjectName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ProjectName)
        </dd>
        <dt>
            Name: 
        </dt>
        <dd>
            @Model.Person.FirstName @Model.Person.MiddleName @Model.Person.Lastname
        </dd>
        <dt>
            Roles: 
        </dt>
        <dd>
            @foreach(var item in Model.ProjectRoles)
            {
                @item
            }
        </dd>
    </dl>

    <h5>Are you sure you want to delete this person from the project?</h5>
    
    <form asp-action="RemovePerson" method="post">
        <input type="hidden" asp-for="ProjectId" value="@Model.ProjectId" />
        <input type="hidden" asp-for="PersonId" value="@Model.PersonId" />
        <input type="submit" value="Yes, Remove" class="btn btn-danger" /> |
        <a asp-action="Details" asp-route-id="@Model.ProjectId">Back to Project Details</a>
    </form>
</div>
