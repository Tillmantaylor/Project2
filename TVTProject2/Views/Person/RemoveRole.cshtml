@model TVTProject2.Models.ViewModels.RemoveRoleVM

@{
    ViewData["Title"] = "RemoveRole";
}

<h1>Remove Role</h1>

<div class="d-flex flex-column mt-2">
    <h2>@Model.ProjectName</h2>
    <h2>@Model.PersonName</h2>
    <form asp-action="RemoveRole">
        <input type="hidden" asp-for="ProjectId" value="@Model.ProjectId" />
        <input type="hidden" asp-for="PersonId" value="@Model.PersonId" />
        <div class="form-group">
            <select name="RoleName">
                <option value="">Roles</option>
                @foreach (var item in Model.Roles)
                {
                    <option value="@item">@item</option>
                }
            </select>
        </div>
        <div class="form-group">
            <input type="submit" value="Remove" class="btn btn-danger" />
        </div>
    </form>
</div>

<div>
    <a asp-controller="Project" asp-action="Details" asp-route-id="@Model.ProjectId">Back to Project Details</a>
</div>